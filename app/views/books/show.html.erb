<h2> <%= @book.title %> </h2>
<h3> <%= @book.author %> </h3>
<h4> <%= @book.category.name %> </h4>
<p><%= @book.description %></p>
<div>
<%= link_to "Back", books_path, :class => "btn btn-default" %>
<% if user_signed_in? %>
  <% if current_user.id == @book.user_id %>
	  <%= link_to "Edit Book", edit_book_path(@book), :class => "btn btn-primary" %>
	  <%= link_to "Destroy Book", book_path(@book), method: :delete, data: { confirm: "Are you sure?"}, :class => "btn btn-danger" %>
  <% end %>
<% end %>
</div>

