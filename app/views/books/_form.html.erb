<%= simple_form_for @book, :html => { :multipart => true } do |form| %>
  <!--%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %-->
  <%= form.select(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
  <%= form.file_field :book_img %>
  <%= form.input :title, label: "Book Title" %>
  <%= form.input :description %>
  <%= form.input :author %>
  <%= form.button :submit, :class => "btn-custom2" %>
<% end %>